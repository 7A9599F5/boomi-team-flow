<!--
  GET Component from Dev Account via Partner API

  HTTP Method: GET
  URL: https://api.boomi.com/partner/api/rest/v1/{primaryAccountId}/Component/{componentId}?overrideAccount={devAccountId}

  Headers:
    Accept: application/xml
    Content-Type: application/xml

  Authentication: Basic Auth (BOOMI_TOKEN.user@domain.com:api-token)

  URL Parameters:
    {primaryAccountId} - Your primary Boomi account ID (from Flow Service config value)
    {componentId}      - The component ID to retrieve (from request payload)
    {devAccountId}     - The dev sub-account to read from (overrideAccount parameter)

  HTTP Client Operation Configuration:
    Action: Send
    HTTP Method: GET
    Request URL: /partner/api/rest/v1/{1}/Component/{2}
    Request URL Parameters:
      {1} = Dynamic Process Property: primaryAccountId
      {2} = Dynamic Process Property: currentComponentId
    Query Parameters:
      overrideAccount = Dynamic Process Property: devAccountId

  Response: Full component XML including <bns:Component> with <bns:object> configuration

  Notes:
    - The overrideAccount parameter allows reading from sub-accounts using the primary account API token
    - Response includes all component settings, references, and configuration
    - Connection components will contain encrypted credential values (stripped in next step)

  Component Type Reference (see component-types/ for full <bns:object> examples):
    type="process"           → component-types/process.xml
    type="profile.json"      → component-types/profile-json.xml
    type="profile.xml"       → component-types/profile-xml.xml
    type="profile.flatfile"  → component-types/profile-flatfile.xml
    type="profile.edi"       → component-types/profile-edi.xml
    type="profile.db"        → component-types/profile-db.xml
    type="connector-settings"→ component-types/connector-settings.xml
    type="connector-action"  → component-types/connector-action.xml
    type="transform.map"     → component-types/map.xml
    type="script.mapping"    → component-types/scripting-mapscript.xml
    type="script.processing" → component-types/scripting-processscript.xml
    type="processroute"      → component-types/processroute.xml
    type="crossref"          → component-types/crossref.xml
-->
<bns:Component xmlns:bns="http://api.platform.boomi.com/" componentId="{componentId}" version="{version}" name="{componentName}" type="{componentType}" folderFullPath="{folderPath}">
  <bns:object>
    <!-- Component configuration XML varies by type -->
  </bns:object>
</bns:Component>
