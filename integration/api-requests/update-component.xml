<!--
  UPDATE Component in Primary Account via Partner API

  HTTP Method: POST
  URL: https://api.boomi.com/partner/api/rest/v1/{primaryAccountId}/Component/{prodComponentId}~{branchId}

  Headers:
    Accept: application/xml
    Content-Type: application/xml

  Notes:
    - componentId MUST be the existing prod component ID from the DataHub mapping
    - Tilde syntax (~{branchId}) writes the update to the promotion branch instead of main
    - API auto-increments the version number (no duplicate created)
    - folderFullPath: /Promoted{devFolderFullPath} - mirrors the dev account's folder hierarchy
      Updated on each promotion to ensure folder structure stays in sync with dev
    - The <bns:object> contains the stripped and reference-rewritten XML from dev
    - Response returns the existing componentId with incremented version
    - The update exists only on the branch until merged to main via MergeRequest

  Component Type Reference (see component-types/ for full <bns:object> examples):
    type="process"           → component-types/process.xml
    type="profile.json"      → component-types/profile-json.xml
    type="profile.xml"       → component-types/profile-xml.xml
    type="profile.flatfile"  → component-types/profile-flatfile.xml
    type="profile.edi"       → component-types/profile-edi.xml
    type="profile.db"        → component-types/profile-db.xml
    type="connector-action"  → component-types/connector-action.xml
    type="map"               → component-types/map.xml
    type="scripting"         → component-types/scripting-mapscript.xml
                               component-types/scripting-processscript.xml
    type="processroute"      → component-types/processroute.xml
    type="crossref"          → component-types/crossref.xml

  HTTP Client Operation Configuration:
    Action: Send
    HTTP Method: POST
    Request URL: /partner/api/rest/v1/{1}/Component/{2}~{3}
    Request URL Parameters:
      {1} = Dynamic Process Property: primaryAccountId
      {2} = Dynamic Process Property: prodComponentId
      {3} = Dynamic Process Property: branchId
-->
<bns:Component xmlns:bns="http://api.platform.boomi.com/" componentId="{prodComponentId}" name="{componentName}" type="{componentType}" folderFullPath="/Promoted{devFolderFullPath}">
  <bns:object>
    <!-- Stripped and reference-rewritten component configuration XML -->
  </bns:object>
</bns:Component>
